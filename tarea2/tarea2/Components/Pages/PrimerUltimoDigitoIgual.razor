@page "/primer-ultimo-digito-igual"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Verificar si el primer y último dígito son iguales</h3>
    <div class="card-body">
        <input @bind="inputNumber" type="number" class="form-control" placeholder="Introduce un número" />
        <button @onclick="VerificarDigitosIguales" class="btn btn-primary">Verificar</button>

        <p class="result">Resultado: @result</p>
    </div>
</div>

@code {
    private int inputNumber;
    private int result;

    private void VerificarDigitosIguales()
    {
        string numberString = inputNumber.ToString();
        result = (numberString[0] == numberString[numberString.Length - 1]) ? 1 : 0;
    }
}

