@page "/cantidad-digito-en-entero"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Contar cuántas veces aparece un dígito en un entero</h3>
    <div class="card-body">
        <input @bind="inputNumber" type="number" class="form-control" placeholder="Introduce un número" />
        <input @bind="inputDigit" type="number" class="form-control" placeholder="Introduce un dígito" />
        <button @onclick="ContarDigitoEnEntero" class="btn btn-primary">Contar</button>

        <p class="result">Cantidad de veces que aparece el dígito: @result</p>
    </div>
</div>

@code {
    private int inputNumber;
    private int inputDigit;
    private int result;

    private void ContarDigitoEnEntero()
    {
        string numberString = inputNumber.ToString();
        result = numberString.Count(d => d == inputDigit.ToString()[0]);
    }
}

