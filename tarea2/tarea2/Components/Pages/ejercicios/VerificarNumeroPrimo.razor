@page "/verificar-numero-primo"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Verificar si un número es primo</h3>
    <div class="card-body">
        <input @bind="inputNumber" type="number" class="form-control" placeholder="Introduce un número" />
        <button @onclick="VerificarPrimo" class="btn btn-primary">Verificar</button>

        <p class="result">Resultado: @result</p>
    </div>
</div>

@code {
    private int inputNumber;
    private int result;

    private void VerificarPrimo()
    {
        result = EsPrimo(inputNumber) ? 1 : 0;
    }

    private bool EsPrimo(int numero)
    {
        if (numero < 2) return false;
        for (int i = 2; i <= Math.Sqrt(numero); i++)
        {
            if (numero % i == 0) return false;
        }
        return true;
    }
}

