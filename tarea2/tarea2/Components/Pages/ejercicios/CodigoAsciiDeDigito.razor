@page "/codigo-ascii-digito"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Verificar si el entero corresponde al código ASCII de un dígito</h3>
    <div class="card-body">
        <input @bind="inputNumber" type="number" class="form-control" placeholder="Introduce un número" />
        <button @onclick="VerificarAscii" class="btn btn-primary">Calcular</button>

        <p class="result">Resultado: @result</p>
    </div>
</div>

@code {
    private int inputNumber;
    private int result;

    private void VerificarAscii()
    {
        result = (inputNumber >= 48 && inputNumber <= 57) ? 1 : 0;
    }
}

