@page "/mayor-en-vector"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Retornar el mayor número en un vector</h3>
    <div class="card-body">
        @for (int i = 0; i < 10; i++)
        {
            <input @bind="vector[i]" type="number" class="form-control" placeholder="Valor @(i+1)" /><br />
        }
        <button @onclick="ObtenerMayor" class="btn btn-primary">Calcular</button>

        <p class="result">Mayor número: @mayor</p>
    </div>
</div>

@code {
    private int[] vector = new int[10];
    private int mayor;

    private void ObtenerMayor()
    {
        mayor = vector.Max();
    }
}

