@page "/cantidad-digitos-primos"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Obtener la Cantidad de Dígitos Primos de un Número</h3>
    <div class="card-body">
        <input @bind="inputNumber" type="number" class="form-control" placeholder="Introduce un número" />
        <button @onclick="ObtenerCantidadDigitosPrimos" class="btn btn-primary">Calcular</button>

        <p class="result">Cantidad de dígitos primos: @result</p>
    </div>
</div>

@code {
    private int inputNumber;
    private int result;

    private void ObtenerCantidadDigitosPrimos()
    {
        string numberString = inputNumber.ToString();
        result = numberString.Count(d => EsPrimo(int.Parse(d.ToString())));
    }

    private bool EsPrimo(int numero)
    {
        if (numero < 2) return false;
        for (int i = 2; i <= Math.Sqrt(numero); i++)
        {
            if (numero % i == 0) return false;
        }
        return true;
    }
}

