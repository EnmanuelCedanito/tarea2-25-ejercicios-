@page "/calcular-factorial"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Calcular el Factorial de un Número</h3>
    <div class="card-body">
        <input @bind="inputNumber" type="number" class="form-control" placeholder="Introduce un número" />
        <button @onclick="Calcularfactorial" class="btn btn-primary">Calcular</button>

        <p class="result">Factorial: @result</p>
    </div>
</div>

@code {
    private int inputNumber;
    private long result;

    private void Calcularfactorial()
    {
        result = Factorial(inputNumber);
    }

    private long Factorial(int num)
    {
        if (num == 0 || num == 1) return 1;
        return num * Factorial(num - 1);
    }
}

