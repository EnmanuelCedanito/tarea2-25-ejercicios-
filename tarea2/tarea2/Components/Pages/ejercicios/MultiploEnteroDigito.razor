@page "/multiplo-entero-digito"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Verificar si un entero es múltiplo de un dígito</h3>
    <div class="card-body">
        <input @bind="inputNumber" type="number" class="form-control" placeholder="Introduce un número" />
        <input @bind="inputDigit" type="number" class="form-control" placeholder="Introduce un dígito" />
        <button @onclick="VerificarMultiplo" class="btn btn-primary">Verificar</button>

        <p class="result">Resultado: @result</p>
    </div>
</div>

@code {
    private int inputNumber;
    private int inputDigit;
    private int result;

    private void VerificarMultiplo()
    {
        result = (inputNumber % inputDigit == 0) ? 1 : 0;
    }
}

<style>
    /* Estilo general reutilizado */
    .card {
        width: 300px;
        margin: 50px auto;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: #f9f9f9;
        text-align: center;
    }
    .card-title {
        font-size: 20px;
        margin-bottom: 20px;
    }
    .card-body {
        display: flex;
        flex-direction: column;
    }
    .form-control {
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .btn {
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .btn:hover {
        background-color: #0056b3;
    }
    .result {
        margin-top: 15px;
        font-size: 18px;
    }
</style>
