@page "/multiplo-entre-enteros"
@rendermode InteractiveServer

<div class="card">
    <h3 class="card-title">Verificar si un número es múltiplo de otro</h3>
    <div class="card-body">
        <input @bind="firstNumber" type="number" class="form-control" placeholder="Primer número" />
        <input @bind="secondNumber" type="number" class="form-control" placeholder="Segundo número" />
        <button @onclick="VerificarMultiplo" class="btn btn-primary">Verificar</button>

        <p class="result">Resultado: @result</p>
    </div>
</div>

@code {
    private int firstNumber;
    private int secondNumber;
    private int result;

    private void VerificarMultiplo()
    {
        result = (firstNumber % secondNumber == 0) ? 1 : 0;
    }
}

